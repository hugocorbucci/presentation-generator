<% @presentation.slides.each_with_index do |slide, index| %>
  <% unless slide.image.blank? %>
    <div class="slide">
      <h1><%=slide.content%></h1>
      <img src="<%= slide.image %>"></img>
    </div>
  <% end %>
<% end %>

<script>
  $(document).keypress(function(e){
      if (e.keyCode == 37) { 
         var current = $(".slide:visible");
         var previous = current.prev('.slide');
         if(previous.length) {
           previous.show();
           current.hide();
         }
         return false;
      } else if (e.keyCode == 39) { 
        var current = $(".slide:visible");
        var next = current.next('.slide');
        if(next.length) {
          next.show();
          current.hide();
        }
        return false;
      }
  });
  $(function() {
    $(".slide").hide();
    $(".slide:first-child").show();
  })
</script>